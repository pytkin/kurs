          &:focus {
            border-color brand-primary

            .overlap-layer {
              opacity 1
            }
          }
        }
        .image-container {
          position absolute
          top 16px
          right 16px
          left 16px
          bottom 48px
          display flex
          align-content center
          justify-content center

          img {
            display block
            max-width 100%
            max-height 100%
            height auto
          }
        }
        .item-title {
          position absolute
          bottom 0
          left 0
          width 100%
          line-height 48px
          text-align center
          text-transform uppercase
          font-weight bold
          font-size 2rem
          font-family font-family-alt
          color #38a9c0

          @media (min-width: screen-md-min) and (max-width: screen-md-max) {
            font-size 1.8rem
          }
        }
        .overlap-layer {
          position absolute
          opacity 0
          display block
          top 0
          left 0
          bottom 0
          right 0
          padding 10px 25px 0
          background-image linear-gradient(to top, #eaeaea 0, #f7f7f7 100%)
          text-align center
          transition opacity .3s ease-in-out;

          .overlap-item-title {
            min-height 69px
            max-height 69px
            display inline-flex
            justify-content center
            flex-direction row
            flex-wrap nowrap
            align-items center
            margin 0 0 16px
            font-size 2rem
            line-height 1.2
            text-transform uppercase
            font-weight bold
            color #15accb
            border-bottom 1px solid brand-primary
            width 100%
            padding-bottom 5px

            @media (min-width: screen-md-min) and (max-width: screen-md-max) {
              font-size 1.6rem
              min-height 49px
            }
          }
          .overlap-item-desc {
            font-size 1.4rem
            line-height 1.2
            font-weight 300
            color #484848
            padding 0 10px
            display block
            max-height 55px
            margin-bottom 20px

            p {
              margin-bottom 0
            }
          }
        }
      }
      .more-link {
        float right
        width 140px
        height 250px
        text-transform uppercase
        font-size 1.8rem
        line-height 1.2
        font-weight 300
        font-family font-family-alt
        text-decoration none
        color #15accb
        padding 90px 0 0 24px

        .inline-icon {
          margin-top 3px
        }

        &:hover {
          color #a7a7a7

          [class~="inline-icon"] {
            background-position 0 -38px
          }
        }
      }
    }

    &:nth-child(even) {
      .image-col {
        float right
        background-image linear-gradient(to left, #48bcd3 0, #62d6ed 100%)
      }
      .content-col {
        float left
        background-color #f2f2f2
        box-shadow inset -2px 0 1px -1px rgba(0,0,0,.25)
      }
      .preparations-col .content-wrap {
        background-color #f2f2f2
      }
    }
  }
}


