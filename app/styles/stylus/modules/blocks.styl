}


// Hello user mobile

.hello-user-mobile {
  background-color #fff
  padding 7px 10px 10px 10px
  min-height 90px
  clearfix()

  @media (min-width: screen-xs-min) {
    padding-left 30px
    padding-bottom 5px
  }
  @media (min-width: screen-md-min) {
    display none
  }

  .username-panel {
    margin-top 10px
    padding-left 40px
    background url(../img/hello-user-avatar.png) no-repeat 1px 8px
