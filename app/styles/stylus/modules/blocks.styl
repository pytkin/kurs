// Preparations categories

.preparations-categories {
  width 100%
  margin 0 auto

  @media (min-width: screen-md-min) and (max-width: screen-md-max) {
    width (screen-md - 20px)
  }
  @media (min-width: screen-md-max) {
    width screen-lg
  }

  .block-header {
    position relative
    background url(../img/preparations-categories-header-arrow.png) no-repeat 16px 20px brand-primary
    height 74px
    padding-left 70px
    box-shadow 0 1px 2px 0 rgba(0,0,0,.25)
    z-index 3

