        overflow hidden
        height 250px
        box-shadow inset 2px 0 1px -1px rgba(0,0,0,.35)
        text-align left
      }
      @media (min-width: screen-md-max) {
        width 800px
      }

      .category-desc {
        padding 38px 28px 38px 42px
        color #4c4c4c

        @media (min-width: screen-md-min) {
          padding 47px 75px 0 60px
        }
        @media (min-width: screen-md-max) {
          padding 56px 135px 0 52px
        }

        h3 {
          font-size 2.6rem
          line-height 1
          text-transform uppercase
          color inherit
          margin 0

          @media (min-width: screen-md-min) {
            margin-bottom 24px
          }
          @media (min-width: screen-md-max) {
            margin-bottom 30px
          }
        }
        p {
          color inherit
          font-size 1.6rem
          line-height 2.5rem
          font-weight 300
          margin-bottom 24px
          display none

          @media (min-width: screen-md-min) {
            display block
          }
        }
        .more-link {
          font-size 1.8rem
          line-height 2.4rem
          font-weight 300
          font-family font-family-alt
          display none
          color #15accb
          text-transform uppercase
          text-decoration none
          border-bottom 1px dashed

          [class~="inline-icon"] {
            vertical-align top
            margin-left 10px
          }

          @media (min-width: screen-md-min) {
            display inline-block
