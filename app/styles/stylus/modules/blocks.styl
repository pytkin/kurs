// Promo slider

.promo-slider {
  width 100%
  height 400px
  overflow hidden

  @media (max-width: screen-sm-max) {
    display none
  }

  .gallery {
    height 400px
    width 100%

    .gallery-cell {
      width 100%
      height 400px
    }
  }
  .slide-text-wrap {
    position relative
    background-color rgba(79,209,235,.7)
    width 452px
    height 400px
    padding 51px 10px 0 35px

    @media (min-width: screen-md-min) and (max-width: screen-md-max) {
      width 470px
      padding-left 45px
    }

    .slide-title {
      color #fff
      margin 0
      text-transform uppercase
      font-size 60px
      line-height 1
      font-weight 300
      letter-spacing -0.01em

      small {
        font-weight bold
        font-size 20px
        letter-spacing 0
        color #fff
        display block
        margin-bottom 14px
      }
    }
  }
  .slide-image {
    position absolute
    top 0
    left 0
    bottom 0
    right 0
  }

  .flickity-page-dots {
    position absolute
    width screen-lg
    bottom 67px
    padding 0
    margin 0 0 0 (screen-lg / 2 * -1)
    left 50%
    text-align right
    line-height 7px

    @media (min-width: screen-md-min) and (max-width: screen-md-max) {
      width (screen-md - 60px)
      margin-left ((screen-md - 60px) / 2 * -1)
    }

    .dot {
      width 18px
      height 7px
      border-radius 0
      background-color #fff
      opacity 1
      margin 0 1px

      &.is-selected {
        background-color brand-primary
      }
    }
  }
}


// Main nav

.main-nav {
  position relative
  margin -24px auto 12px
  width screen-lg
  height 158px
  box-shadow 0 1px 3px rgba(0,0,0,.13)

  @media (max-width: screen-sm-max) {
    display none
  }
  @media (min-width: screen-md-min) and (max-width: screen-md-max) {
    width (screen-md - 20px)
  }

  // Для внутренних страниц
  .inner-page & {
    margin 0 auto
  }

  ul {
    list-style none
    margin 0
    padding-left 0
    display table
    width 100%
    border-collapse collapse

    li {
      position relative
      display table-cell
      width 25%
      height 158px
      border 1px solid #d9d9d9
      text-align center
      vertical-align middle

      &.active {
        > a {
          background-image linear-gradient(to top, rgba(0,0,0,.05) 0, rgba(255,255,255,.05) 100%), linear-gradient(to top, #fff 87%, rgba(255,255,255,.68) 100%)

          > .main-nav-icon {
            background-position 0 -74px
          }

          &:after {
            transform translateY(0)
          }
        }
      }

      > a {
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        color #4c4c4c
        text-transform uppercase
        font-size 16px
        font-family font-family-alt
        text-decoration none
        display inline-flex
        justify-content center
        align-items center
        flex-direction column
        background-image linear-gradient(to top, #fff 87%, rgba(255,255,255,.68) 100%)
        overflow hidden

        &:after {
          position absolute
          content ''
          bottom 0
          left 0
          right 0
          height 7px
          background-color brand-primary
          transition transform .15s ease-in-out
          transform translateY(7px)
        }

        &:hover,
        &:focus {
          background-image linear-gradient(to top, rgba(0,0,0,.05) 0, rgba(255,255,255,.05) 100%), linear-gradient(to top, #fff 87%, rgba(255,255,255,.68) 100%)

          > .main-nav-icon {
            background-position 0 -74px
          }

          &:after {
            transform translateY(0)
          }
        }
      }
    }
  }
}


