// Button Sizes
// --------------------------------------------------

.btn-lg {
  button-size(15px, 20px, 1.4rem, 1.4)
}
.btn-hg {
  button-size(15px, 22px, 1.8rem, 1.6)
}


// Block button
// --------------------------------------------------

.btn-block {
  display block
  width 100%
}

// Vertically space out multiple block buttons
.btn-block + .btn-block {
  margin-top 5px
}

// Specificity overrides
input[type="submit"],
input[type="reset"],
input[type="button"] {
  &.btn-block {
    width 100%
  }
}
